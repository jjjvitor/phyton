# limpar o terminal

import os
os.system("cls")


n1 = float(input("digite o primeiro numero: "))
n2 = float(input("digite o segundo numero: "))



soma = n1 + n2
subtracao = n1 - n2
multiplicacao = n1 * n2
divisao = n1 / n2




print(f"soma: {soma}")
print(f"subtracao: {subtracao}")
print(f"multiplicacao: {multiplicacao}")
print(f"divisao: {divisao}")
